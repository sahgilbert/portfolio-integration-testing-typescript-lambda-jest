{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist/",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}